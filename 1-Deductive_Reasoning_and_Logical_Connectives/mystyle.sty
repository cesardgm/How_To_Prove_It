% mystyle.sty
\ProvidesPackage{mystyle}

% Packages for setting the page layout and margins
\RequirePackage{times}
\RequirePackage[letterpaper]{geometry}
\geometry{top=1.0in, bottom=1.0in, left=1.0in, right=1.0in}

% Header customization using fancyhdr
\RequirePackage{fancyhdr}
\RequirePackage[english]{babel}
\RequirePackage[utf8]{inputenc}
\pagestyle{fancy}
\fancyhf{}
\rhead{\thepage}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}
\setlength\headsep{0.333in}

% Math packages
\RequirePackage{graphicx,latexsym}
\RequirePackage{longtable}
\RequirePackage{amsmath,amsthm,amssymb}
\RequirePackage{fullpage}
\RequirePackage{setspace}
\RequirePackage{parskip}
\RequirePackage{lmodern}
\setlength{\parskip}{1em}

% Package for adjusting tables
\RequirePackage{tabularx}

% Package for creating Venn diagrams
\RequirePackage{venndiagram}

% Package for customized list environments
\RequirePackage{enumitem}
